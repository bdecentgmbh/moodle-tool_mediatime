{{!
    @template mediatimesrc_ignite/file_upload

    This template will render the file upload form for add files to Ignite

    Variables required for this template:

    Variables optional for this template:

    Example context (json):
    {
        "name": "'Donald'",
        "title": "'DucK'",
        "groupid": 3,
        "description": "'Quack, quack, quack'"
    }

}}
<form id="upload_resource_form" method="post" action=".">
    <div class="container-fluid">
    <h3>{{# str }} videoupload, mediatimesrc_ignite {{/ str }}</h3>
    <p>{{# str }} videoupload_help, mediatimesrc_ignite {{/ str }}</p>
    <input type="hidden" name="categories" value="{{ categories }}" >
    <input type="hidden" name="contextid" value="{{ contextid }}" >
    <input type="hidden" name="create" value="" >
    <input type="hidden" name="source" value="ignite" >
    <input type="hidden" name="filesize" value="" >
    <input type="hidden" name="groupid" value={{ groupid }} >
    <input type="hidden" name="name" value={{{ name }}} >
    <input type="hidden" name="subtitlelanguage" value="{{ subtitlelanguage }}" >
    <input type="hidden" name="title" value={{{ title }}} >
    <input type="hidden" name="description" value={{{ description }}} >
    <input type="hidden" name="ignitetags" value="{{ ignitetags }}" >
    <input type="hidden" name="tags" value="{{ tags }}" >
    <fieldset class="w-100 m-0 p-0 border-0">
        <input type="file" name="videofile" accept="video/*">
    </fieldset>
    <div class="col bg-secondary p-0 m-3">
        <div class="progress bg-primary" style="width: 0%; height: 1em;"></div>
    </div>
    <div class="p-3">
        <button name="upload" type="button" class="btn btn-primary">{{# str }} upload {{/ str }}</button>
        <button name="cancel" value="true" class="btn btn-secondary">{{# str }} cancel {{/ str }}</button>
    </div>
    </div>
</form>
{{# js }}
    require(['mediatimesrc_ignite/file_upload'], function(FileUpload) {
        FileUpload.init();
    });
{{/ js }}
