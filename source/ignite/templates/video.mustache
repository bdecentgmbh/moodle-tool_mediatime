{{!
    @template mediatimesrc_ignite/video

    This template will render a resource to embed in library

    Variables required for this template:

    Variables optional for this template:

    Example context (json):
    {
        "elementid": "a3lj4l3j4",
        "poster": "https://example.com/pluginfile.php/1/mediatimesrc_ignite/image/9/sample.png",
        "title": "Ducks",
        "instance": "{}"
    }

}}
<div class="col col-12 {{ classes }} text-center">
    {{# videourl }}
    <video 
        id="{{ elementid }}"
        controls
        poster="{{ poster }}"
        class="video-js col col-12"
    >
        {{# texttracks }}
            <track
                kind="{{ type }}"
                {{# label }}label="{{ label }}"{{/ label }}
                src="{{ url }}"
                srclang="{{ language }}"
            >
            </track>
        {{/ texttracks }}
    </video>
    {{/ videourl }}
    {{^ videourl }}
    <div class="alert alert-info">
        {{# str }} processingmessage, mediatimesrc_ignite {{/ str }}
    </div>
    <img src="{{ poster }}" class="col col-12 {{ classes }}" alt="{{ title }}">
    {{/ videourl }}
</div>
{{#js}}
if (document.getElementById('{{ elementid }}')) {
    require(['videotimeplugin_videojs/videotime'], function(VideoTime) {
        VideoTime.prototype.view = function() {
            return true;
        };
        var v = new VideoTime('{{{ elementid }}}', 0, 0, 0, {{{instance}}});
        v.initialize();
    });
}
{{/js}}
