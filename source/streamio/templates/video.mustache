{{!
    @template mediatimesrc_streamio/video

    This template will render a resource to embed in library

    Variables required for this template:

    Variables optional for this template:

    Example context (json):
    {
        "elementid": "324lk32sK",
        "instance": "[{'vimeo_url': 'https://example.com/video.m3u8'}]",
        "screenshot": {
            "normal": "example.com/image.jpg"
        }
    }

}}
<p>
    <video 
        id="{{ elementid }}"
        controls
        class="video-js"
        poster="{{ poster }}"
    >
    </video>
</p>
{{#js}}
    require(['videotimeplugin_videojs/videotime'], function(VideoTime) {
        VideoTime.prototype.view = function() {
            return true;
        };
        var v = new VideoTime('{{ elementid }}', 0, 0, 0, {{{instance}}});
        console.log(['{{ elementid }}', 0, 0, 0, {{{instance}}}]);
        v.initialize();
    });
{{/js}}
