<form action="." method="post">
   {{^ libraryhome }}
   <button type="submit" name="source" value="streamio">Add Streamio</button>
   {{/ libraryhome }}
</form>
<div class="cards container-fluid">
    <div class="row">
        {{# media }}
            <div class="card col col-sm-6 col-md-4 col-lg-3">
                <a href="{{ url }}">
                    <img class="card-img-top" src="https://{{ content.screenshot.normal }}">
                </a>
                    <div class="card-body">
                        <div class="card-title"><a href="{{ url }}"> {{ content.title }} </a></div>
                        <p class="card-text"> {{ content.description }} </p>
                    </div>
            </div>
        {{/ media }}
    </div>
{{{resource}}}
</div>
